---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const isActive = href === Astro.url.pathname;
---

<a href={href} class:list={[className, { active: isActive }, 'py-3 font-medium text-slate-600 hover:text-slate-900 hover:underline transition duration-300']} {...props}>
	<slot />
</a>